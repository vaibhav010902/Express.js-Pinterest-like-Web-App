<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pinterest Profile Page</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>

<body>
    <main class="profile-container">
        <div class="profile-header">
            <div class="profile-picture">
                <% if(user.dp===undefined){%>
                <img src="https://i.pinimg.com/280x280_RS/fe/7d/ee/fe7deef834e1fafe56f8023ced803ca9.jpg"
                    alt="Profile Picture"></a>
                <% } else{%>
                    <img src="/images/uploads/<%=user.dp%>" alt="" >
                    <% }%>
            </div>
            <div class="profile-info">
                <h1 class="username">
                    <%=user.username%>
                </h1>
                <p class="user-meta">
                    <%=user.fullname%> Â· he/him
                </p>
                <p class="following-count">0 following</p>
                <div class="profile-actions">
                    <a href="/navbar"><button class="share-btn">Share</button ></a>
                    <button class="edit-profile-btn">Edit profile</button>
                    <button class="edit-profile-btn">Settings</button>
                    <a class="edit-profile-btn" name="logout" style="text-decoration: none;" href="/logout">Logout</a>
                </div>
            </div>
        </div>

        <div class="profile-tabs">
            <button class="tab active">Created</button>
            <button class="tab">Saved</button>
        </div>

        <div class="profile-content">
            <% if(user.posts.length===0){ %>
                <p class="empty-message">Nothing to show... yet! Pins you create will live here.</p>
                <% } %>
                    <% if(typeof error !=='undefined' && error){ %>
                        <p class="error-message" style="color: red;">
                            <%= error %>
                        </p>
                        <% } %>
                            <form action="/upload" , method="post" , enctype="multipart/form-data" class="upload-form">
                                <input type="text" name="imagetitle" placeholder="Image Title">
                                <input type="text" name="filecaption" placeholder="Image Caption">
                                <input type="file" , name="file">
                                <button type="submit" style="margin-right: 6px;">Upload</button>
                                <button type="button" class="upload-cancel-btn">Cancel</button>
                            </form>
                            <button class="create-pin-btn">Create Pin</button>
        </div>
        
        <div class="masonry-container">
            <% user.posts.forEach(function(post) { %>
                <div class="masonry-item">
                    <img src="/images/uploads/<%= post.image %>" alt="Post Image" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= post.imageTitle %>
                        </h5>
                        <p class="card-text">
                            <%= post.imageCaption %>
                        </p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
                <% }) %>
        </div>

    </main>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>
    <script src="/javascripts/profile.js"></script>
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>

</body>

</html>