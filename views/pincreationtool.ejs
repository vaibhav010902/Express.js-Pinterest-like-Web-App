<body>
    <%- include('./navbar2.ejs') %>

        <div class="pin-creation-tool-container">
            <nav class="pin-creation-tool-container-navbar">
                <div class="navbar-title">
                    <span>Create Pin</span>
                </div>
                <div class="navbar-btn-container">
                    <div class="navbar-btn">
                        <span class="material-symbols-outlined">
                            add
                        </span>
                    </div>
                    <div class="navbar-btn">
                        <span class="material-symbols-outlined">
                            keyboard_double_arrow_left
                        </span>
                    </div>
                </div>
            </nav>
            <div class="pin-creation-tool-main-container">
                <div class="pin-creation-tool-container-left">
                    <div class="pin-creation-tool-main-container-left">
                        <div class="choose-file">
                            <label for="file-upload" class="custom-file-upload">
                            </label>
                            <input id="file-upload" type="file" />
                            <div class="choose-file-container">
                                <div class="choose-file-container-1">
                                    <div class="choose-file-container-icon">
                                        <span class="material-symbols-outlined">
                                            upload
                                        </span>
                                    </div>
                                    <div class="choose-file-container-context">
                                        <span>Choose a file or drag and drop it here</span>
                                    </div>
                                </div>
                                <div class="choose-file-container-2">
                                    <span>We recommend using high-quality .jpg files less than 20MB or .mp4 files less
                                        than
                                        200MB.</span>
                                </div>
                            </div>
                        </div>
                        <p id="choose-file-form-below-border"></p>
                        <div id="pin-creation-tool-main-container-left-btn">
                            <button>Save from URL</button>
                        </div>
                    </div>
                </div>
                <div class="pin-creation-tool-container-right">
                    <div class="pin-creation-tool-main-container-right">
                        <div class="container-1">
                            <div id="title-container" class="container-1-div">
                                <label for="imagetitle">Title</label>
                                <input type="text" name="imagetitle" id="image-title" placeholder="Add a title">
                            </div>
                            <div id="description-container" class="container-1-div">
                                <label for="imagecaption">Description</label>
                                <textarea type="text" name="imagecaption" id="image-description"
                                    placeholder="Add a detail description"></textarea>
                            </div>
                        </div>
                        <div class="container-2">
                            <div id="link-container" class="container-2-div">
                                <label for="link">Link</label>
                                <input type="url" name="link" id="link" placeholder="Add a link">
                            </div>
                            <div id="board-container" class="container-2-div">
                                <label for="board">Board</label>
                                <input type="text" name="board" id="board" placeholder="Choose a board">
                            </div>
                            <div id="tagged-topic-container" class="container-2-div">
                                <div id="tagged-topic-container-div">
                                    <label for="taggedtopic">Tag topics (0)</label>
                                    <input type="text" name="taggedtopic" id="taggedtopic" placeholder="Search for a tag">
                                </div>
                                <p id="container-2-p">Don't worry, people won't see your tags</p>
                            </div>
                        </div>
                        <!-- <div class="container-3">
                            <div id="title-container" class="container-3-div">
                                <label for="imagetitle">Title</label>
                                <input type="text" name="imagetitle" id="">
                            </div>
                            <p id="container-3-p">Don't worry, people won't see your tags</p>
                        </div> -->
                        <div class="container-4">
                            <div id="container-4-div">
                                <p id="container-4-div-p">Tag products</p>
                                <button id="container-4-div-btn">Add products</button>
                            </div>
                            <p id="container-4-p">More options</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

