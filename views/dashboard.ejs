<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,200..800&family=Jost:ital,wght@0,100..900;1,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <link rel="stylesheet" href="/stylesheets/profile2.css">
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous"> -->
    <!-- <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" /> -->
    <title>Navbar</title>
</head>

<body>
    <%- include('./navbar2.ejs') %>
        <div class="profile-section">
            <main class="profile-container">
                <div class="profile-header">
                    <div class="profile-header-account-info">
                        <div class="profile-picture">
                            <% if(user.dp===undefined){%>
                                <img src="https://i.pinimg.com/280x280_RS/fe/7d/ee/fe7deef834e1fafe56f8023ced803ca9.jpg"
                                    alt="Profile Picture"></a>
                                <% } else{%>
                                    <img src="/images/uploads/<%=user.dp%>" alt="">
                                    <% }%>
                        </div>
                        <div class="profile-info">
                            <h1 class="fullname">
                                <%=user.fullname%>

                            </h1>
                            <p class="email">
                                <%=user.email%>
                            </p>
                            <p class="following-count">0 following</p>
                        </div>
                    </div>
                    <div class="profile-header-btn-container">
                        <a href="/navbar"><button class="share-btn">Share</button></a>
                        <a href=""><button class="edit-profile-btn">Edit profile</button></a>
                        <a href=""><button class="edit-profile-btn">Settings</button></a>
                        <a name="logout" style="text-decoration: none;" href="/logout"><button
                                class="edit-profile-btn">Logout</button></a>
                    </div>
                </div>

                <div class="profile-tabs">
                    <button class="tab active" id="create-btn">Created</button>
                    <button class="tab" id="saved-btn">Saved</button>
                </div>

                <div class="profile-content">
                    <% if(user.posts.length===0){ %>
                        <p class="empty-message">Nothing to show... yet! Pins you create will live here.</p>
                        <% } %>
                            <% if(typeof error !=='undefined' && error){ %>
                                <p class="error-message" style="color: red;">
                                    <%= error %>
                                </p>
                                <% } %>
                                    <form action="/upload" , method="post" , enctype="multipart/form-data"
                                        class="upload-form">
                                        <input type="text" name="imagetitle" placeholder="Image Title">
                                        <input type="text" name="filecaption" placeholder="Image Caption">
                                        <input type="file" , name="file">
                                        <button type="submit" style="margin-right: 6px;">Upload</button>
                                        <button type="button" class="upload-cancel-btn">Cancel</button>
                                    </form>
                                    <button class="create-pin-btn">Create Pin</button>
                </div>

                <div class="masonry-container">
                    <% user.posts.forEach(function(post) { %>
                        <div class="masonry-item">
                            <img src="/images/uploads/<%= post.image %>" alt="Post Image" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.imageTitle %>
                                </h5>
                                <p class="card-text">
                                    <%= post.imageCaption %>
                                </p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <div class="profile-saved-content">
                    <% if(user.savedItems.length===0){ %>
                        <p class="empty-message">You Saved Nothing. Explore to saved the pins in your collection.</p>
                        <% } %>
                            <% if(typeof error !=='undefined' && error){ %>
                                <p class="error-message" style="color: red;">
                                    <%= error %>
                                </p>
                                <% } %>
                                    <form action="/upload" , method="post" , enctype="multipart/form-data"
                                        class="upload-form">
                                        <input type="text" name="imagetitle" placeholder="Image Title">
                                        <input type="text" name="filecaption" placeholder="Image Caption">
                                        <input type="file" , name="file">
                                        <button type="submit" style="margin-right: 6px;">Upload</button>
                                        <button type="button" class="upload-cancel-btn">Cancel</button>
                                    </form>
                                    <a href="/home"><button class="create-pin-btn">Explore</button></a>
                </div>

                <div class="masonry-container-saved">
                    <% user.savedItems.forEach(function(post) { %>
                        <div class="masonry-item">
                            <img src="/images/uploads/<%= post.image %>" alt="Post Image" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.imageTitle %>
                                </h5>
                                <p class="card-text">
                                    <%= post.imageCaption %>
                                </p>
                                <a href="#" class="btn btn-primary">Go somewhere</a>
                            </div>
                        </div>
                        <% }) %>
                </div>

            </main>
        </div>


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
            crossorigin="anonymous"></script>
        <script src="/javascripts/profile.js"></script>
        <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
</body>

</html>